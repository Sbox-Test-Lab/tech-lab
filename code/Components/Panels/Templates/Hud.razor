@using Sandbox;
@using Sandbox.UI;
@using Sandbox.Razor;

@inherits Panel

@namespace ItemBuilder.UI

<style>
    Hud 
    {
        .container {
            flex-direction: column;
            width: 100%;
            height: 100%;
        }

        .top {
            height: 320px;
            max-height: 25%;
            width: 100%;

            >.left
            {
                width: 25%;
                //background-color: aquamarine;
                font-size: 64px;
            }

            >.middle {
                height: 100%;
                max-width: 50%;
                justify-content: center;
            }

            >.right {
                width: 25%;
                justify-content: flex-end;
            }
        }

        .middle {
            flex-grow: 1;
            width: 100%;
        }

        .bottom {
            height: 320px;
            max-height: 25%;

            width: 100%;

            >.left {
                flex-grow: 1;
            }

            >.middle {
                height: 100%;
                max-width: 50%;
            }

            >.right {
                flex-grow: 1;
                justify-content: flex-end;
            }
        }
    }
</style>

<root>
    <div class="container">
        <div class="top">
            <div class="left">
                @TopLeft
            </div>

            <div class="middle">
                @TopCenter
            </div>

            <div class="right">
                @TopRight
            </div>
        </div>

        <div class="middle">
            <div class="middle">
                @Center
            </div>
        </div>

        <div class="bottom">
            <div class="left">
                @BottomLeft
            </div>

            <div class="middle">
                @BottomCenter
            </div>

            <div class="right">
                @BottomRight
            </div>
        </div>
    </div>

</root>

@code
{
    public RenderFragment TopLeft { get; set; }
    public RenderFragment TopCenter { get; set; }
    public RenderFragment TopRight { get; set; }

    public RenderFragment Center { get; set; }

    public RenderFragment BottomLeft { get; set; }
    public RenderFragment BottomCenter { get; set; }
    public RenderFragment BottomRight { get; set; }
}
