@namespace ItemBuilder.UI

@inherits PanelComponent

<style>
    MainMenu {
        position: absolute;
        
        top: 0px;
        left: 0px;
        right: 0px;
        bottom: 0px;
        
        background-color: transparent;
        
        pointer-events: all;
        
        flex-direction: row;
        
        padding: 32px;
        
        font-family: 'PT Root UI';
        
        color: #ccc;
        
        .center {
            position: absolute;
            width: 100%;
            height: 100%;
            justify-content: center;
        }

        .left {
            margin-top:64px;
            margin-left: 64px;
            flex-direction: column;
            width: 100%;

            > .title {
                font-size: 64px;
                font-weight: bold;
                color: aquamarine;
            }

            > .explanation {
                color: white;
                font-size: 32px;
                font-weight: 500;
                flex-direction: column;
            }

            > .button-list {
                margin-top: 64px;
                flex-direction: column;
                gap: 16px;

                > .button {
                    padding: 16px;
                    background-color: rgba(0.5,0.5,0.5, 0.4);
                    font-size: 32px;

                    max-width: 320px;

                    border-radius: 2px;
                    cursor: pointer;
                    transition: background-color 0.2s;

                    &:hover {
                        background-color: rgba(0.5,0.5,0.5, 0.8);
                    }
                }
            }
        }
    }
</style>

<root>
    <div class="center">
        <div class="left">
            <div class="title">Tech Lab</div>

            <div class="explanation">
                <p>
                    Experiments and tech
                </p>
            </div>

            <div class="button-list">
                <div class="button" onclick=@( () => Start() )>
                    Start
                </div>

                <div class="button" onclick=@( () => Quit() )>
                    Quit
                </div>
            </div>

        </div>
    </div>    
</root>



@code 
{
    private void Start()
    {
        Game.ActiveScene.LoadFromFile("scenes/main.scene");
    }

    private void Quit()
    {
        Game.Close();
    }
}
